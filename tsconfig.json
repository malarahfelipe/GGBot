{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "lib": [
      "esnext",
      "es2020"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "*": [
        "node_modules/*",
        "src/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ]
}
